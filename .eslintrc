{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": 0,
    "curly": 2,
    "linebreak-style": [2, "unix"],
    "no-console": 0,
    "no-var": 2,
    "prefer-const": 1,
    "semi": [2, "always"],
    "@typescript-eslint/explicit-function-return-type": [
      2,
      {
        "allowExpressions": true
      }
    ]
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": ["prettier/@typescript-eslint"],
  "root": true,
  "plugins": ["@typescript-eslint/eslint-plugin"]
}
